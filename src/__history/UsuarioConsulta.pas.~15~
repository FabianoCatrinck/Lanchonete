unit UsuarioConsulta;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls,
  Data.DB, Vcl.Grids, Vcl.DBGrids;

type
  TTelaUsuarioConsulta = class(TForm)
    PanelRodape: TPanel;
    BotaoFechar: TSpeedButton;
    PanelDados: TPanel;
    DBGrid: TDBGrid;
    BotaoIncluir: TSpeedButton;
    BotaoAlterar: TSpeedButton;
    BotaoExcluir: TSpeedButton;
    procedure BotaoFecharClick(Sender: TObject);
    procedure BotaoIncluirClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure BotaoAlterarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;



implementation

{$R *.dfm}

uses UsuarioCadastro, DataModule;

procedure TTelaUsuarioConsulta.BotaoAlterarClick(Sender: TObject);
var
  TelaUsuarioCadastro: TTelaUsuarioCadastro;
begin
  TelaUsuarioCadastro := TTelaUsuarioCadastro.Create(nil);

  try
    TelaUsuarioCadastro.TipoOperacao := 'E';
    TelaUsuarioCadastro.NomeUsuario := Dados.ConsultaUsuario.FieldByName('NomeUsuario').AsString;
    TelaUsuarioCadastro.TipoAcesso := Dados.ConsultaUsuario.FieldByName('TipoAcessoUsuario').AsString;
    TelaUsuarioCadastro.ShowModal;
    Dados.ConsultaUsuario.Close;
    Dados.ConsultaUsuario.Open;
  finally
    FreeAndNil(TelaUsuarioCadastro);
  end;
end;

procedure TTelaUsuarioConsulta.BotaoFecharClick(Sender: TObject);
begin
  Close;
end;

procedure TTelaUsuarioConsulta.BotaoIncluirClick(Sender: TObject);
var
  TelaUsuarioCadastro: TTelaUsuarioCadastro;
begin
  TelaUsuarioCadastro := TTelaUsuarioCadastro.Create(nil);

  try
    TelaUsuarioCadastro.ShowModal;
    Dados.ConsultaUsuario.Close;
    Dados.ConsultaUsuario.Open;
  finally
    FreeAndNil(TelaUsuarioCadastro);
  end;
end;

procedure TTelaUsuarioConsulta.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
  Dados.ConsultaUsuario.Close;
end;

procedure TTelaUsuarioConsulta.FormCreate(Sender: TObject);
begin
  Dados.ConsultaUsuario.CreateDataSet;
  DBGrid.DataSource := Dados.DataSourceUsuario;
end;

end.
